<form
    method="post"
    action="/cadastro"
    class="d-flex flex-column align-items-center w-50 mx-auto gap-4 mt-5"
>
    <div class="w-100 d-flex">
        <label for="username" class="w-25">Nome de Usuário: </label>
        <input
            type="text"
            name="username"
            placeholder="Digite o nome do usuário..."
            class="flex-grow-1 flex-shrink-1"
        />
    </div>
    <div class="w-100 d-flex">
        <label for="email" class="w-25">Email: </label>
        <input
            type="email"
            name="email"
            placeholder="Digite o email que será cadastrado..."
            class="flex-grow-1 flex-shrink-1"
        />
    </div>
    <div class="w-100 d-flex">
        <label for="password" class="w-25">Senha: </label>
        <input
            type="password"
            name="password"
            placeholder="Digite a senha..."
            class="flex-grow-1 flex-shrink-1"
        />
    </div>

    <button type="submit" class="btn btn-primary px-5">Criar Conta</button>

    <a href="/login">Faça login aqui</a>
</form>
